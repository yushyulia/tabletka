<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SingInActivity">

    <TextView
        android:id="@+id/welcome_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal|top"
        android:text="@string/welcome_id"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/log_in_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="178dp"
        android:gravity="center_horizontal|top"
        android:text="@string/log_in_id"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="227dp"
        android:background="@drawable/rectangle"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/hint_email_id"
        android:inputType="textEmailAddress"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/user_passwd"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_below="@+id/user_email"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="267dp"
        android:background="@drawable/rectangle"
        android:fontFamily="@font/inter_semibold"
        android:hint="@string/hint_password_id"
        android:inputType="textPassword"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_below="@id/user_passwd"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="329dp"
        android:background="@drawable/rectangle_button_blue"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/enter_button_id"
        android:textColor="@color/white"
        android:textSize="13sp"></Button>

    <Button
        android:id="@+id/btn_fogetpswd"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="382dp"
        android:background="@drawable/rectangle_button_wb"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/foget_button_id"
        android:textColor="@color/blue"
        android:textSize="13sp"></Button>

    <Button
        android:id="@+id/btn_withoutregistr"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="469dp"
        android:background="@drawable/rectangle_button_blue"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/withoutregistr_button_id"
        android:textColor="@color/white"
        android:textSize="13sp"></Button>

    <Button
        android:id="@+id/btn_register_screen"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="593dp"
        android:background="@drawable/rectangle_button_white"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal|top"
        android:text="@string/regist_button_id"
        android:textColor="@color/blue"
        android:textSize="13sp"></Button>

</RelativeLayout>